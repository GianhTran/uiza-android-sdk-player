<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="testlibuiza">

    <application
        android:name="testlibuiza.app.LSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--for v2-->
        <activity
            android:name=".sample.v2.uizavideo.rl.V2UizaVideoIMActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sample.v2.api.V2TestAPIActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sample.v2.uizavideo.slide.V2UizaVideoIMActivitySlide"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sample.v2.uizavideo.slide2.V2UizaVideoIMActivitySlide2"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />

        <receiver
            android:name=".sample.v2.uizavideo.FloatClickFullScreenReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="FLOAT_CLICKED_FULLSCREEN" />
            </intent-filter>
        </receiver>
        <!--end for v2-->

        <!--for v3-->
        <activity
            android:name=".sample.v3.api.V3TestAPIActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sample.v3.uizavideov3.UizaSDKPlayerV3Activity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name=".sample.v3.uizavideov3.V3CannotSlidePlayer"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />

        <receiver
            android:name=".sample.v3.uizavideov3.FloatClickFullScreenReceiverV3"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="FLOAT_CLICKED_FULLSCREEN_V3" />
            </intent-filter>
        </receiver>
        <!--end for v3-->
    </application>

</manifest>