<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <vn.loitp.views.wwlvideo.layout.WWLVideoFixedAspectRatioRelativeLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:aspectRatio="179.99878%">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/li_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:27"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_18" />

    </vn.loitp.views.wwlvideo.layout.WWLVideoFixedAspectRatioRelativeLayout>

    <FrameLayout
        android:id="@+id/avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail_container"
        android:paddingLeft="0.0dip"
        android:paddingRight="16.0dip">

        <ImageView
            android:layout_width="@dimen/w_30"
            android:layout_height="@dimen/w_30"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_play_arrow_black_48dp"
            android:tint="@color/White" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/details_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail_container"
        android:layout_toRightOf="@+id/avatar_container"
        android:gravity="top"
        android:paddingRight="40.0dip">

        <TextView
            android:id="@+id/li_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/li_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li_title"
            android:text="Loitp"
            android:textColor="@color/White" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/li_overflow"
        android:layout_width="@dimen/w_30"
        android:layout_height="@dimen/w_30"
        android:layout_alignParentRight="true"
        android:layout_below="@id/thumbnail_container"
        android:src="@drawable/ic_settings_black_48dp" />
</RelativeLayout>